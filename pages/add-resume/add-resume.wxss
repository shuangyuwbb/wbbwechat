/* pages/screenshot/screenshot.wxss */
.btn-w{
  text-align: center;
}
.btn{
  width:100%;
  border-radius: 12rpx;
  height:100rpx;
  line-height: 100rpx;
  background: linear-gradient(to right,yellow,green);
  text-align: center;
  font-size:30rpx;
}
.wrapper{
  position:relative;
  width:100%;
  height:93vh;
  background-color:rgba(0, 0, 0, .7);
  overflow: hidden;
}
.wrapper image{
  position:absolute;
  top:50%;
  left:50%;
  transform: translate(-50%,-50%);
  z-index:5;
  margin-top:40rpx;
}
.canvas-one{
  position:absolute;
  top:50%;
  left:50%;
  transform: translate(-50%,-50%);
  width:90%;
  margin:0 auto;
  vertical-align: middle;
}
.canvas-wrapper{
  position:relative; 
  width:100%;
  margin-left:750rpx;
  height:93vh;
}
.move-area{
  width:90%;
  height:100vh;
  position:absolute;
  top:0;
  left:50%;
  transform: translateX(-50%);
  z-index: 6;
}
.move-view{
  position:absolute;
  border:3rpx solid #fff;
  z-index:7;
}
.bottom-w{
  position:fixed;
  width:100%;
  bottom:0;
  height:7vh;
  line-height: 7vh;
  text-align: center;
  color:#fff;
  background-color:#000;
  font-size:30rpx;
  z-index: 10;
}
.bottom-w view{
  float:left;
  width:50%;
  text-align: center;
}
