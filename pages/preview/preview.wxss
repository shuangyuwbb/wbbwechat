/* pages/preview/preview.wxss */
.preview_container {
  border-top: 1px solid #cccccc;
  width: 750rpx;
  height: 1200rpx;
  display: flex;
  flex-direction: column;
  justify-content: start;
}
.preview_container .preview {
  flex: 11;
  width: 750rpx;
  text-align: center;
  margin-top: 30rpx;
}
.preview_container .preview .imgda {
  width: 100%;
  height: 100%;
}
.preview_container .preview .mask {
  position: absolute;
  top: 0;
  left: 30px;
  width: 315px;
  height: 90%;
  background: rgba(0, 0, 0, 0.67);
  border-radius: 10px;
  justify-content: center;
  align-items: center;
}
.preview_container .preview .pre_img {
  height: 840rpx;
  width: 625rpx;
  box-shadow: #ccc 0px 0px 2px 2px;
  border-top: 4rpx solid #ccc;
  border-radius: 30rpx;
  margin: 0 auto;
  overflow: hidden;
}
.preview_container .preview .pre_img image {
  height: 100%;
  width: 100%;
}
.preview_container .preview .pre_img .edit {
  background-color: #fff;
  color: #000000;
  width: 100rpx;
  position: absolute;
  left: 50%;
  top: 40%;
  transform: translateX(-40rpx);
  border-radius: 25rpx;
  z-index: 999;
  line-height: 55rpx;
}
.preview_container .dots {
  height: 40rpx;
  margin-top: 20rpx;
  width: 100%;
}
.preview_container .dots .img_dots {
  width: 65rpx;
  height: 15rpx;
}
.preview_container .bottom_wrap {
  flex: 3;
  text-align: center;
  display: flex;
  flex-direction: row;
  width: 100%;
}
.preview_container .bottom_wrap .pr {
  width: 52rpx;
  margin: auto 0;
}
.preview_container .bottom_wrap .pr image {
  width: 15rpx;
  height: 40rpx;
}
.preview_container .bottom_wrap scroll-view {
  height: 100%;
  width: 640rpx;
}
.preview_container .bottom_wrap scroll-view .content_wrap {
  height: 228rpx;
  width: 100%;
  display: flex;
}
.preview_container .bottom_wrap scroll-view .content_wrap .content_item {
  width: 142rpx;
  height: 200rpx;
  flex: 1;
  margin: auto 10rpx;
  box-shadow: #ccc 0px 0px 2px 2px;
}
.preview_container .bottom_wrap scroll-view .content_wrap .content_item image {
  width: 140rpx;
  height: 200rpx;
}
