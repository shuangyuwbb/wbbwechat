/* pages/bind_school/school.wxss */
page {
  font-family: SimHei;
}
.contain {
  width: 100vw;
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  transform: translateY(-200rpx);
}
.contain .search {
  width: 100%;
  height: 50rpx;
  display: flex;
  justify-content: center;
}
.contain .search .searchinput {
  height: 50rpx;
  width: 430rpx;
  border: 1rpx solid #ccc;
  border-radius: 33rpx;
  justify-content: center;
  margin-right: 20rpx;
  position: relative;
}
.contain .search .searchinput input {
  text-align: center;
  height: 100%;
  width: 100%;
}
.contain .search .searchinput .icon {
  position: absolute;
  right: 14rpx;
  top: 5rpx;
}
.contain .search .searchinput .icon image {
  width: 45rpx;
  height: 45rpx;
}
.contain .search .finish {
  width: 45rpx;
  height: 45rpx;
  cursor: pointer;
  margin-top: 3rpx;

}
.contain .search .finish image {
  width: 45rpx;
  height: 45rpx;
}
.contain .school_name {
  text-align: center;
  margin-top: 10rpx;
  width: 100%;
}
.contain .txt {
  width: 100%;
  text-align: center;
  margin-top: 50rpx;
  font-size: 24rpx;
  color: #ccc;
}
.contain .tip {
  margin-top: 12px;
  text-align: center;
  width: 100%;
  font-size: 32rpx;
  color: red;
}
